<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Videolib</title>
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/custom.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- navigation bar -->
    <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% if logged_in? %>
        <% @user = current_user %>
        <a class="navbar-brand" href="/users/<%=@user.username%>/videos/not-watched">VideoLib</a>
      <% else %>
        <a class="navbar-brand" href="/">VideoLib</a>
      <% end %>  
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
   
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if logged_in? %>
        <% @user = current_user %>
        <ul class="nav navbar-nav">
          <li><a href="/users/<%=@user.username%>/sections">Your Sections</a></li>
          <li><a href="/users/<%=@user.username%>/videos">Your Videos</a></li>
          <li><a href="/sections/new">New Section</a></li>
          <li><a href="/videos/new">New Video</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <!--  <li><a href="/sections">All Sections</a></li>  -->
        <!--  <li><a href="/videos">All Videos</a></li>  -->
          <li class="active"><a href="/logout"> Log Out </a></li>
        </ul>  
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/signup">Sign Up</a></li>
          <li class="active"><a href="/login"> Log In </a></li>
        </ul>  
     <% end %>
      
    
     
   </div>     <!-- /.navbar-collapse -->
    
  </div>     <!-- /.container-fluid -->

</nav>      <!-- navigation bar -->


  <!-- user greeting -->
  <% if logged_in? %>
  
    <% @user = current_user %>

    <h4>Welcome, <%=@user.username %>!</h4>

  
  <% end %> 

  <!-- user greeting -->

   <!-- flash message & body's body -->
  
    <div class="container">
      <% if !@error_message.nil? %>
      <div class="alert alert-warning">
        <%= @error_message %>
      </div>
      <% end %>
    
     
      <%= yield %> 
    
    </div>   
    <!-- flash message & body's body -->


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    
  </body>
</html>